<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="ratio ratio-1x1">
                <img src="{{product.image_url}}" class="img-fluid" alt="{{product.title}}" style="object-fit: contain; padding: 10px;">
            </div>
        </div>
        <div class="col-12 col-md-6">
            <h2>{{product.title}}</h2>
            <p class="mt-3">{{product.description}}</p>
            <h4 class="mt-4">Price: ${{product.price}}</h4>
            <button class="btn btn-success mt-4">Add to Cart</button>
        </div>
    </div>
</div>